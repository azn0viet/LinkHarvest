{
  "manifest_version": 3,
  "name": "LinkHarvest",
  "version": "1.0",
  "default_locale": "en",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://api.real-debrid.com/*"],
  "action": {
    "default_icon": "icons/icon128.png",
    "default_title": "LinkHarvest",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
