{
  "manifest_version": 2,
  "name": "LinkHarvest",
  "version": "1.1",
  "default_locale": "en",
  "permissions": ["tabs", "storage", "downloads", "https://api.real-debrid.com/*"],
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "LinkHarvest",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
